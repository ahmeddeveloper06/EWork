                    "bDestroy": true,
                    "bSort": true,
                    //"columnDefs": [{
                    //    "targets": [3],
                    //    "orderable": false
                    //}],
                    /*"bStateSave": true,*/
                    serverSide: true,
                    columns: [
                        { data: 'FirstName', name: 'FirstName' },
                        //{ data: 'Active', name: 'Active' },
                        {
                            "render": function (data, type, row) {
                                return "<input class='cbActive' type='checkbox' data-id=" + row["ID"]
                                    + (row["Active"] ? " checked " : "") + "  />";
                            }
                        },
                        {
                            "render": function (data, type, row) {
